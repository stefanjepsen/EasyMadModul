<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content\Site.css" />

    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" id="afventer" aria-current="page" href="/Home/Afventer" >Afventer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="udleveret" href="/Home/Udleveret" >Udleveret</a>
                    </li>
                  </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")

    @RenderSection("scripts", required: false)
    <script type="text/javascript" src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>

<style>

    :root {
        --green: #8da47e;
        --card: #e7cba9;
        --nejknap: #f7ce76;
        --lavendel: #9cadce;
        --abrikos: #ffc09f;
        --white: #fff;
    }

    body {
        padding: 0px;
        
    }
    @@media (max-width: 769px) {
        body {
            font-size: 22px;
        }
    }


        .btn-primary {
            background-color: var(--green);
            color: var(--white);
            border-color: var(--white);
        }

        .btn-primary:hover, .btn-primary:focus, .btn-primary:active, .btn-primary.active, .open .dropdown-toggle.btn-default {
            background-color: #9cadce;
            color: var(--white);
            border-color: var(--white);
        }
</style>

<script>
    const afventer = document.getElementById("afventer");
    const udleveret = document.getElementById("udleveret");

    const regU = /Home\/Udleveret/g;
    const regA = /Home\/Afventer/g;

    if (window.location.href.match(regU)) {
        console.log("vi er på udleveret");
        udleveret.classList.add("active");
        afventer.classList.remove("active");
    } else if (window.location.href.match(regA)) {
        console.log("vi er på afventer");
        afventer.classList.add("active");
        udleveret.classList.remove("active");
    } else {
        console.log("hello cats");
    }
    
</script>